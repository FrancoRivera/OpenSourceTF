/* ========================================*/
/*                 Login Form              */
/* ========================================*/
             .login_container{
              
              padding:1em;
              background-color: rgba(255,255,255, 0.76);
              margin:2em 0;
            border-radius: 10px;

             }
             #usuario, #contrasenha1, #correo, #contrasenha2, #nombres, #apellidos {
              width:100%;
              border:none;
              height:40px;
              padding:10px;
                 padding-left:40px;
             }
             #usuario, #contrasenha1, #correo, #nombres, #apellidos{
              border-bottom:1px solid rgba(128, 128, 128, 0.38);
             }
             .center{text-align:center;}

            #form_login_button {
                 background-color:#2e6bdd;
              padding:10px;
              color:white;
              border: none;
                 width:100%;
                     font-size:1.3em;
             }
        
        /*  Para poner los iconos dentro del form  */


        /* enable absolute positioning */
        .inner-addon { position: relative; }

        /* style icon */
        .inner-addon .glyphicon {
          position: absolute;
          padding: 10px;
          pointer-events: none;
        }

        /* align icon */
        .left-addon .glyphicon  { left:  20px;}
        .right-addon .glyphicon { right: 20px;}

        /* add padding  */
        .left-addon input, .left-addon select  { padding-left:  30px; }
        .right-addon input, .right-addon select{ padding-right: 30px; }















